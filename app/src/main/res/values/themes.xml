<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.Satena2" parent="android:Theme.Material.Light.NoActionBar">
        <item name="android:statusBarColor">@color/purple_700</item>
    </style>
    <!-- BookmarkPostActivity -->
    <!-- Activityをダイアログとして表示する -->
    <style name="Theme.AppDialogTheme" parent="android:Theme.Dialog">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <!-- コンテンツエリア矩形内の透過部分を完全に透過させるために必要 -->
        <item name="android:windowBackground">@android:color/transparent</item>
        <!-- コンテンツの外側部分の背景を暗くする -->
        <item name="android:backgroundDimEnabled">true</item>
        <!-- 画面幅占有比率(min,max両方同値にして固定する / コンテンツ側でパディングを設定) -->
        <item name="android:windowMinWidthMajor">100%</item>
        <item name="android:windowMinWidthMinor">100%</item>
    </style>
</resources>
